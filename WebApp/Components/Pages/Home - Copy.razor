@page "/h2"

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
	/* Reset and Base Styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Radley', sans-serif;
	}

	body {
		background: linear-gradient(135deg, #1a1a2e, #16213e);
		color: white;
		line-height: 1.6;
	}

	/* Header */
	header {
		padding: 1rem;
		text-align: center;
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 1000;
		background: rgba(26, 26, 46, 0.95);
	}

	nav {
		display: flex;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo {
		font-size: 2rem;
		color: #ff6b6b;
		text-decoration: none;
		font-weight: bold;
		text-shadow: 0 0 10px rgba(255,107,107,0.5);
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

		.nav-links a {
			color: white;
			text-decoration: none;
			transition: color 0.3s;
		}

			.nav-links a:hover {
				color: #ff6b6b;
			}

	/* Hero Section */
	.hero {
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem;
		background: linear-gradient(135deg, #1a1a2e, #16213e);
	}

	.hero-content {
		max-width: 800px;
	}

	.hero h1 {
		font-size: 4rem;
		margin-bottom: 1rem;
		text-shadow: 0 0 20px rgba(255,107,107,0.5);
	}

	.hero p {
		font-size: 1.5rem;
		margin-bottom: 2rem;
	}

	/* Call to Action Button */
	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
		color: white;
		text-decoration: none;
		border-radius: 30px;
		font-size: 1.2rem;
		transition: transform 0.3s, box-shadow 0.3s;
	}

		.cta-button:hover {
			transform: translateY(-5px);
			box-shadow: 0 10px 20px rgba(255,107,107,0.4);
		}

	/* Products Section */
	.products {
		padding: 5rem 2rem;
		background: #16213e;
	}

	.product-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.product-card {
		background: rgba(255,255,255,0.05);
		border-radius: 10px;
		padding: 1.5rem;
		transition: transform 0.3s;
	}

		.product-card:hover {
			transform: translateY(-10px);
		}

	/* Video Section */
	.video-section {
		position: relative;
		padding: 2rem;
		background: #16213e;
	}

	.youtube-iframe {
		width: 100%;
		height: 400px;
		border-radius: 10px;
	}

	/* Benefits Section */
	.benefits {
		padding: 5rem 2rem;
		text-align: center;
	}

	.benefit-points {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.benefit-card {
		background: rgba(255,255,255,0.05);
		padding: 2rem;
		border-radius: 10px;
		text-align: left;
	}

	/* Footer */
	footer {
		background: #1a1a2e;
		color: white;
		padding: 3rem;
		text-align: center;
	}

	.social-links {
		margin-top: 1rem;
	}

		.social-links a {
			color: white;
			text-decoration: none;
			margin: 0 0.5rem;
			font-size: 1.5rem;
		}

	/* Animations */





	.floating {
		animation: float 3s ease-in-out infinite;
	}



	.hero h1 {
		font-size: 2.5rem;
	}

	}
</style>


